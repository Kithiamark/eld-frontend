# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Application Configuration
VITE_APP_NAME=ELD Manager
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_GPS_TRACKING=true
VITE_ENABLE_MOBILE_SYNC=true

# Sync Configuration
VITE_SYNC_INTERVAL=300000
VITE_GPS_UPDATE_INTERVAL=60000

# Google Maps API (Optional - for location features)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Sentry (Optional - for error tracking)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Analytics (Optional)
VITE_GA_TRACKING_ID=your_ga_tracking_id_here